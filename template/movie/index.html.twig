{% extends 'main.html.twig' %}
{% block title %}{{ trailers | length }} iTunes Movie trailers{% endblock %}
{% block content %}
    <div class="container">
        <h3 class="mt-5 mb-4">{{ 'current time and date-'|upper }} {{ dateTime }}</h3>
        <h1 class="mt-5 mb-4">{{ trailers | length }} iTunes Movie trailers</h1>
        <div class="movies d-flex flex-wrap">
            {% for trailer in trailers %}
                <div class="card" style="align-items: center">
                    <img class="card-img-top" src="{{ trailer.image }}" height="300" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ trailer.title }}</h5>
                        <a href="{{ trailer.link }}" target="_blank" class="btn btn-primary">More information</a>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}
