{% extends 'main.html.twig' %}
{% block title %}{{ trailers | length }} iTunes Movie trailers{% endblock %}
{% block content %}
    <div class="container">
        <h3 class="mt-5 mb-4">{{ 'current time and date-'|upper }} {{ dateTime }}</h3>
        <h1 class="mt-5 mb-4">{{ trailers | length }} iTunes Movie trailers</h1>
        <div class="movies d-flex flex-wrap" style="max-width: 95%">
            {% for trailer in trailers %}
                <div class="card border-info mb-3" style="max-width: 18rem; margin-right: 22px">
                    <img class="rounded mx-auto d-block" src="{{ trailer.image }}" height="300" alt="Card image cap">
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ trailer.title }}</h5>
                        <a href="show/{{ trailer.id }}" class="btn btn-primary">More information</a>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}
