{
  "name": "creative/work-test",
  "description": "Test task for a job seeker",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Andrew Zhdanovskih",
      "email": "andrew72ru@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-json": "*",
    "doctrine/annotations": "^1.13",
    "doctrine/orm": "^2.11",
    "monolog/monolog": "^2.3",
    "php-di/php-di": "^6.3",
    "php-http/client-common": "^2.3",
    "php-http/guzzle7-adapter": "^0.1",
    "psr/container": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^1.0",
    "slim/psr7": "^1.5",
    "slim/slim": "^4.9",
    "symfony/cache": "^6.0",
    "symfony/console": "^5.1",
    "symfony/dotenv": "^5.1",
    "symfony/yaml": "^5.1",
    "twig/twig": "^v3.0",
    "uma/dic": "^2.0.1",
    "ext-simplexml": "*",
    "ext-dom": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0.x-dev",
    "jangregor/phpstan-prophecy": "^1.0.0",
    "phpspec/prophecy-phpunit": "^2.0",
    "phpstan/extension-installer": "^1.1.0",
    "phpstan/phpstan": "^1.4",
    "phpunit/phpunit": "^9.5.16",
    "squizlabs/php_codesniffer": "^3.6",
    "symfony/var-dumper": "^5.2",
    "phpmetrics/phpmetrics": "^2.4",
    "vimeo/psalm": "^4.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
